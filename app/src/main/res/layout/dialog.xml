<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@color/common_action_bar_splitter">

    <Button
        android:id="@+id/declineButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=" NE "
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="58dp"
        android:clickable="true"
        android:textStyle="bold"
        android:background="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=" DA "
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignBaseline="@+id/declineButton"
        android:layout_alignBottom="@+id/declineButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/textDialog"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:textSize="24sp"
        android:layout_marginBottom="42dp"
        android:textStyle="bold"
        android:layout_above="@+id/declineButton"
        android:layout_alignLeft="@+id/acceptButton"
        android:layout_alignStart="@+id/acceptButton" />

</RelativeLayout>